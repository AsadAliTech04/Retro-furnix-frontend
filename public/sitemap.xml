<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <!-- Home Page -->
    <url>
        <loc>http://retrofurnix.com/</loc>
        <changefreq>daily</changefreq>
        <priority>1.0</priority>
    </url>

    <!-- Categories and Products -->
    {categories.map(category => (
        <url key={category.id}>
            <loc>http://retrofurnix.com/category/{category.id}</loc>
            <changefreq>weekly</changefreq>
            <priority>0.8</priority>
        </url>
        {category.products.map(product => (
            <url key={product.id}>
                <loc>http://retrofurnix.com/product/{product.id}</loc>
                <changefreq>monthly</changefreq>
                <priority>0.7</priority>
            </url>
        ))}
    ))}

    <!-- About Page -->
    <url>
        <loc>http://retrofurnix.com/about</loc>
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
    </url>

    <!-- Contact Page -->
    <url>
        <loc>http://retrofurnix.com/contact</loc>
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
    </url>

    <!-- Success Page -->
    <url>
        <loc>http://retrofurnix.com/success</loc>
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
    </url>

    <!-- Order Page -->
    <url>
        <loc>http://retrofurnix.com/order</loc>
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
    </url>
</urlset>
